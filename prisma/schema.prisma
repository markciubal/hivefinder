generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERUSER
  MODERATOR
  MEMBER
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  username  String?  @unique
  email     String  @unique
  password  String
  firstName String?
  lastName  String?
  about     String?

  // ðŸ‘‡ NEW â€“ simple array of interest names for now
  interests String[] @default([])

  resetToken    String?
  resetExpires  DateTime?
  resetLastSent DateTime?

  // Back-relations
  memberships Member[]       // clubs they belong to
  moderations ClubModerator[] // clubs they moderate

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Club {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?

  // ðŸ‘‡ NEW â€“ to match your clubs.json structure
  categories    String[]
  fieldsOfStudy String[]
  points        Int?
  clubUrl       String?

  members     Member[]       // users who belong to this club
  moderators  ClubModerator[] // moderators
  createdAt   DateTime        @default(now())
}

model Member {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  clubId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])
  club Club @relation(fields: [clubId], references: [id])

  joinedAt DateTime @default(now())
}

model ClubModerator {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  clubId String @db.ObjectId

  user User @relation(fields: [userId], references: [id])
  club Club @relation(fields: [clubId], references: [id])

  assignedAt DateTime @default(now())
}
